{% extends 'base.html.twig' %}

{% block title %}Herramientas index{% endblock %}

{% block body %}
    <h1>Herramientas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Logo</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for herramienta in herramientas %}
            <tr>
                <td>{{ herramienta.id }}</td>
                <td>{{ herramienta.nombre }}</td>
                <td>{{ herramienta.logo }}</td>
                <td>{{ herramienta.link }}</td>
                <td>
                    <a href="{{ path('app_herramientas_show', {'id': herramienta.id}) }}">show</a>
                    <a href="{{ path('app_herramientas_edit', {'id': herramienta.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_herramientas_new') }}">Create new</a>
{% endblock %}
